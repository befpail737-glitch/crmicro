<!-- Thermal Design Diagram -->
<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <rect width="100%" height="100%" fill="#f9fafb"/>
  <text x="400" y="40" font-family="Arial, sans-serif" font-size="24" fill="#1f2937" text-anchor="middle">Thermal Design Considerations</text>
  
  <!-- Device Package -->
  <g transform="translate(300, 200)">
    <!-- Device die -->
    <rect x="-30" y="-30" width="60" height="60" fill="#1e40af" stroke="#1e3a8a" stroke-width="2" rx="5" />
    <text x="0" y="5" font-family="Arial, sans-serif" font-size="12" fill="white" text-anchor="middle">Semiconductor</text>
    <text x="0" y="20" font-family="Arial, sans-serif" font-size="10" fill="#bfdbfe" text-anchor="middle">Junction</text>
    
    <!-- Package -->
    <rect x="-50" y="-50" width="100" height="100" fill="#64748b" stroke="#475569" stroke-width="3" rx="10" />
    <text x="0" y="-60" font-family="Arial, sans-serif" font-size="12" fill="#1f2937" text-anchor="middle">Package</text>
    
    <!-- Heatsink -->
    <g transform="translate(0, 60)">
      <rect x="-70" y="0" width="140" height="20" fill="#94a3b8" stroke="#64748b" stroke-width="2" />
      <rect x="-75" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="-55" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="-35" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="-15" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="5" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="25" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <rect x="45" y="20" width="10" height="40" fill="#cbd5e1" stroke="#64748b" stroke-width="1" />
      <text x="0" y="80" font-family="Arial, sans-serif" font-size="12" fill="#374151" text-anchor="middle">Heatsink</text>
    </g>
    
    <!-- Thermal Path -->
    <line x1="0" y1="-30" x2="0" y2="-50" stroke="#ef4444" stroke-width="3" marker-end="url(#arrowhead)" />
    <line x1="0" y1="50" x2="0" y2="60" stroke="#ef4444" stroke-width="3" marker-end="url(#arrowhead)" />
    
    <!-- Temperature labels -->
    <text x="30" y="-40" font-family="Arial, sans-serif" font-size="12" fill="#dc2626" text-anchor="start">Tj = 150°C</text>
    <text x="30" y="55" font-family="Arial, sans-serif" font-size="12" fill="#92400e" text-anchor="start">Tc, Ts</text>
  </g>
  
  <!-- Thermal Resistance Diagram -->
  <g transform="translate(50, 350)">
    <text x="0" y="0" font-family="Arial, sans-serif" font-size="16" fill="#1f2937">Thermal Resistance Network</text>
    
    <!-- Rjc -->
    <rect x="0" y="30" width="80" height="30" fill="#dbeafe" stroke="#3b82f6" stroke-width="2" />
    <text x="40" y="50" font-family="Arial, sans-serif" font-size="12" fill="#1e3a8a" text-anchor="middle">RθJC</text>
    <text x="40" y="65" font-family="Arial, sans-serif" font-size="10" fill="#1e40af" text-anchor="middle">Junction-to-Case</text>
    
    <!-- Rcs -->
    <rect x="100" y="30" width="80" height="30" fill="#fed7aa" stroke="#f97316" stroke-width="2" />
    <text x="140" y="50" font-family="Arial, sans-serif" font-size="12" fill="#9a3412" text-anchor="middle">RθCS</text>
    <text x="140" y="65" font-family="Arial, sans-serif" font-size="10" fill="#c2410c" text-anchor="middle">Case-to-Sink</text>
    
    <!-- Rsa -->
    <rect x="200" y="30" width="80" height="30" fill="#bbf7d0" stroke="#22c55e" stroke-width="2" />
    <text x="240" y="50" font-family="Arial, sans-serif" font-size="12" fill="#166534" text-anchor="middle">RθSA</text>
    <text x="240" y="65" font-family="Arial, sans-serif" font-size="10" fill="#15803d" text-anchor="middle">Sink-to-Ambient</text>
    
    <!-- Heat flow arrows -->
    <line x1="40" y1="60" x2="40" y2="90" stroke="#ef4444" stroke-width="2" marker-end="url(#arrowhead)" />
    <line x1="140" y1="60" x2="140" y2="90" stroke="#ef4444" stroke-width="2" marker-end="url(#arrowhead)" />
    <line x1="240" y1="60" x2="240" y2="90" stroke="#ef4444" stroke-width="2" marker-end="url(#arrowhead)" />
    
    <!-- Ambient -->
    <rect x="200" y="100" width="80" height="30" fill="#e5e7eb" stroke="#6b7280" stroke-width="2" />
    <text x="240" y="120" font-family="Arial, sans-serif" font-size="12" fill="#374151" text-anchor="middle">Ambient</text>
    <text x="240" y="135" font-family="Arial, sans-serif" font-size="10" fill="#4b5563" text-anchor="middle">T<sub>a</sub></text>
  </g>
  
  <!-- Formula Box -->
  <g transform="translate(450, 400)">
    <rect width="300" height="150" fill="#f3f4f6" stroke="#d1d5db" stroke-width="2" rx="10" />
    <text x="150" y="30" font-family="Arial, sans-serif" font-size="16" fill="#1f2937" text-anchor="middle">Thermal Calculation</text>
    
    <!-- Formula -->
    <text x="150" y="60" font-family="Arial, sans-serif" font-size="14" fill="#1f2937" text-anchor="middle">T<sub>j</sub> = T<sub>a</sub> + P<sub>d</sub> × (R<sub>θJC</sub> + R<sub>θCS</sub> + R<sub>θSA</sub>)</text>
    
    <text x="150" y="90" font-family="Arial, sans-serif" font-size="12" fill="#4b5563" text-anchor="middle">Where:</text>
    <text x="150" y="110" font-family="Arial, sans-serif" font-size="12" fill="#4b5563" text-anchor="middle">T<sub>j</sub> = Junction Temperature</text>
    <text x="150" y="130" font-family="Arial, sans-serif" font-size="12" fill="#4b5563" text-anchor="middle">T<sub>a</sub> = Ambient Temperature</text>
    <text x="150" y="150" font-family="Arial, sans-serif" font-size="12" fill="#4b5563" text-anchor="middle">P<sub>d</sub> = Power Dissipation</text>
  </g>
  
  <!-- Definitions for arrows -->
  <defs>
    <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="10" refY="3.5" orient="auto">
      <polygon points="0 0, 10 3.5, 0 7" fill="#ef4444"/>
    </marker>
  </defs>
</svg>